extends layout

block content
  div(class='text-center')
    main(class='form-signin')
      form(action='/invites/', method='POST')
        img(class='mb-4', src=icon, alt='Logo ' + title, width='72')
        h1(class='h3 mb-3 fw-normal')= title
        div(class='mb-3 form-floating')
          input(type='email', class='form-control', id='email', name='email', placeholder='name@example.com')
          label(for='email')= 'Email address'
        button(class='mb-3 w-100 btn btn-lg btn-primary', type='submit')= 'Send me an invite'
      if success
        div(class='alert alert-success', role='alert')= 'Your request has been queed. Please wait for the team to validate it.'
